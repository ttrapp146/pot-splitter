<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addSplitHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_split_header_text" />

    <EditText
        android:id="@+id/addSplitInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789/"
        android:ems="10"
        android:inputType="number|date"
        android:maxLength="32" />

    <TextView
        android:id="@+id/addSplitErrorCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/addSplitButtonX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_split_button_label" />

</LinearLayout>